<script type="text/ng-template" id="modal.html">
	<div id="myModal" class="modal" role="dialog">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				 <!-- Modal Header -->
				 <div class="modal-header" ng-class="{'bg-primary': newEmployee.mode == 'create', 'bg-warning': newEmployee.mode == 'edit'}">
					<h4 class="modal-title text-white">{{newEmployee.mode == 'create' ? 'Create'  : 'Edit' }} User</h4>
				  </div>
				<form name="form">
					<div class="modal-body" >	
						<div class="form-row">
							<div class="form-group col-md-6">
								<label for="name">Name</label>
								<input type="text" id="name" name="name" class="form-control"
								ng-model = "newEmployee.name" required>
							</div>
							<div class="form-group col-md-6">
								<label for="designation">Designation</label>
								<input type="text" name="designation" id="designation" class="form-control"
								ng-model="newEmployee.designation">
							</div>
							<div class="form-group col-md-6">
								<label for="contact">Contact</label>
								<input type="text" name="contact" id="contact" class="form-control"
								ng-model="newEmployee.contact">
							</div>
						</div>						
					</div>
					<div class="modal-footer">					
						<button class="btn btn-success" ng-click='create()' ng-if="newEmployee.mode !='edit'"><i class='fa fa-save'></i>ADD</button>
						<button class="btn btn-warning" ng-click='edit()' ng-if="newEmployee.mode =='edit'"><i class='fa fa-save'></i>EDIT</button>
						<button type='button' class="btn btn-danger" ng-click='close()'><i class='fa fa-save'></i>CLose</button>
						
					</div>
				</form>
			</div>
		</div>
	</div>
</script>
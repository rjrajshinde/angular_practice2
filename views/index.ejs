<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Employee DashBoard</title>

    <%include ./partials/css%>
        <style>
            /**
 * Error color for the validation plugin
 */
 .modal{
        display: block !important;
        z-index: 9999 !important;
        backdrop-filter: blur(14px) grayscale(0.6) opacity(12);
      }

            .error {
                color: #e74c3c;
                line-height: 1.5 !important;
                font-size: 12px !important;
                width: 100% !important;;
            }
        </style>

</head>

<body id="page-top" ng-app="controller" ng-controller="bodyController" ng-init="init()">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%include ./partials/topBar%>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-gradient-primary">
                                        <h6 class="text-white">Manage Employee</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 text-right">
                                    <button class="btn bg-primary text-white" ng-click="openModal('create')"><i class="fa fa-plus"></i>
                                        Create new Employee</button>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped text-center text-nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Designation</th>
                                                <th>Contact</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="employee in employees track by $index">
                                                <td>{{$index + 1}}</td>
                                                <td>{{employee.name}}</td>
                                                <td>{{employee.designation}}</td>
                                                <td>{{employee.contact}}</td>
                                                <td>
                                                    <button class="btn btn-warning text-white" ng-click="openModal('edit', employee, $index)"><i class="fa fa-edit"></i></button>
                                                    <button class="btn btn-danger text-white" ng-click="delete(employee._id, $index)"><i class="fa fa-trash"></i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->

                    <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <%include ./modal.ejs%>
    <%include ./partials/bodyScripts%>
        <script src="/ngapps/controller.js"></script>
        

</body>

</html>